{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter", // Require "Black Formatter" extension
        "editor.formatOnSave": true,
    },
    "black-formatter.args": ["--line-length", "120"], // Require "Black Formatter" extension
    "pylint.args": ["--max-line-length=120", "--disable=W1202,W1203,C0114"], // Require "Pylint" extension
    "python.analysis.autoImportCompletions": true // Require "Pylance" extension
}
